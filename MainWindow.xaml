<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="DataSet" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="290*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="corpButton" Content="Корпус" Grid.Column="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Click="corpButton_Click"/>
        <Button x:Name="postButton" Content="Должность" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Click="postButton_Click"/>
        <Button x:Name="staffButton" Content="Сотрудники" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="staffButton_Click"/>
        <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="4"/>
    </Grid>
</Window>
